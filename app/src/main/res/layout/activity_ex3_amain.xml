<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.minnstate.go.go1375rs.jbrandesex3a.Ex3AMainActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/loopMaxEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:inputType="number"
            android:textSize="30sp" />

        <Button
            android:id="@+id/whileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/loopMaxEditText"
            android:layout_alignStart="@+id/loopMaxEditText"
            android:layout_below="@+id/loopMaxEditText"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:text="@string/whileButtonCaption" />

        <Button
            android:id="@+id/doWhileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/doWhileButtonCaption"
            android:layout_below="@+id/loopMaxEditText"
            android:layout_toRightOf="@+id/whileButton"
            android:layout_toEndOf="@+id/whileButton"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" />

        <Button
            android:id="@+id/forButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forButtonCaption"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/loopMaxEditText"
            android:layout_toRightOf="@+id/doWhileButton"
            android:layout_toEndOf="@+id/doWhileButton" />

        <EditText
            android:id="@+id/loopResultEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/loopMaxEditText"
            android:layout_alignLeft="@+id/whileButton"
            android:layout_alignRight="@+id/loopMaxEditText"
            android:layout_alignStart="@+id/whileButton"
            android:layout_below="@+id/whileButton"
            android:ems="10"
            android:inputType="textMultiLine" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
